<p class='notice' id='update-notice'></p>
<div class="container">
  <%= react_component('Success', { id: @type.id, type: 'type' }) %>
  <%= react_component('Errors', { id: @type.id, type: 'type' }) %>
  <%= react_component('TypeForm', { name: @type.name, record_id: @type.id, auth_token: form_authenticity_token}) %>
  
  <h2>Subtypes</h2>
  <div class="row">
    <%= form_for(@subtype) do |f| %>
      <div class="col-sm-3">
        <div class="field form-group">
          <%= f.text_field :name, class: "form-control" %>
        </div>
      </div>

      <div class="col-sm-1">
        <div class="actions">
          <%= f.submit 'Add Subtype', class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </div>

  <% @type.subtypes.each do |s| %>
    <%= react_component('Success', { id: s.id, type: 'subtype' }) %>
    <%= react_component('Errors', { id: s.id, type: 'subtype' }) %>
    <div class="row">
      <%= react_component('SubtypeForm', { name: s.name, record_id: s.id, auth_token: form_authenticity_token}) %>
    </div>
  <% end %>
</div>
