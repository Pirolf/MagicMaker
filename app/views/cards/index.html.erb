<% javascript 'card_all.js' %>
<% header 'My Cards' %>
<div class="cards-all">
  <div class="new-card-container">
    <a href=<%= new_card_path %>>
      <div class="glyphicon glyphicon-plus-sign medium-glyph"></div>
      New Card
    </a>
  </div>
  <% @cards.each_with_index do |card, i| %>
      <% lastKlass = '' %>
      <% mod4 = (@cards.count + 1)%4 %>
      <% mod3 = (@cards.count + 1)%3 %>
      <% lastKlass = "last-4-#{mod4} last-3-#{mod3}" if i == @cards.count - 1 %>
      <%= render partial: 'shared/card', locals: { card: card, lastClass: lastKlass, overlay: true} %>
      <!--%= link_to 'Edit', edit_card_path(card) %-->
      <!--%= link_to 'Destroy', card, method: :delete, data: { confirm: 'Are you sure?' } %--> 
  <% end %>
</div>
