<div class="field form-group">
  <%= f.label :type %><br>
  <div class="row">
    <div class="col-sm-4">
      <%= collection_select(:card, :type_id, Type.all, :id, :name, { include_blank: true }, { id: "card_type", class: "form-control" }) %>
    </div>
    <div class="col-sm-6">
      <%= collection_select(
        :card, 
        :subtype_id, 
        if @card.type != nil then @card.type.subtypes else [] end, 
        :id, :name, 
        { include_blank: true }, 
        { id: "card_subtype", class: "form-control" }
        ) %>
    </div>
  </div>
</div>