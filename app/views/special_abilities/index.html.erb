<p id="notice"><%= notice %></p>

<h1>Listing Special Abilities</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Rule</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @special_abilities.each do |special_ability| %>
      <tr>
        <td><%= special_ability.name %></td>
        <td><%= special_ability.rule %></td>
        <td><%= link_to 'Show', special_ability %></td>
        <td><%= link_to 'Edit', edit_special_ability_path(special_ability) %></td>
        <td><%= link_to 'Destroy', special_ability, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

